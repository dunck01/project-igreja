{
  // Ensure TypeScript treats the repository root as the rootDir so files in `prisma` and `src` are included.
  "compilerOptions": {
	"target": "ES2020",
	"module": "commonjs",
	"rootDir": "./",
	"outDir": "dist",
	"strict": true,
	"esModuleInterop": true,
	"moduleResolution": "node",
	"resolveJsonModule": true,
	"skipLibCheck": true
  },
  "include": ["src", "prisma"],
  "exclude": ["node_modules", "dist"]
}